<Homepage>:
    name : 'homepage'
    BoxLayout:
        orientation: 'vertical'
        padding:root.width*.1,root.height*.1
        spacing:30
        BoxLayout:
            orientation: 'horizontal'
            size: self.size
            Button:
                text:"L&F"
                size_hint:.3,0.7
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]
            Button:
                text:"home"
                size_hint:.3,0.3
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
            Button:
                text:" my activity"
                on_release:app.root.current='my_act'
                size_hint:.3,0.3
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                
        BoxLayout:
            orientation: 'vertical'
            padding :'12dp'
            spacing:'12dp'
            
            
            Button:
                text:"i lost something"
                size_hint:0.5,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                on_release:app.root.current='ilost'

            Button:
                text:"i found something"
                size_hint:0.5,1
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release:app.root.current='ifound'
            Button:
                text:"my notifications"
                size_hint:0.5,1
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                text:"track my item"
                size_hint:0.5,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                on_release:app.root.current='matchfinder'
        BoxLayout:
            orientation: 'horizontal'
            size: self.size
            spacing: 10
            Button:
                text:'settings'
                on_release:app.root.current='login'
                size_hint:.3,0.4 
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [25,]
            Button:
                text:"log out"
                size_hint:.3,0.4
                on_release:app.root.current='login'
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [25,]
            Button:
                text:"FAQs"
                size_hint:.3,0.4
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [25,]
