<IFoundPage>:
    name:'ifound'
     
    AnchorLayout:
        padding:root.width*.1,root.height*.1
        spacing:30
        
        GridLayout:
            
            cols:1
            rows:3
            height: '48dp'
             
            GridLayout:
                cols:2
                rows:1
                size_hint_y:.5
                Label:
                    text:'UZLoFo'
                    size_hint:1,0.5
                Label:
                    text:'report lost item'
                    size_hint:1,0.5
            GridLayout:
                cols:2
                rows:3
                Label:
                    text:'reg number'
                    size: self.parent.size
                    pos:self.parent.pos
                TextInput:
                    id: reg_num
                    multiline:False
                    text_hint:'reg number'
                    size: self.parent.size
                    pos:self.parent.pos
                
                Label:
                    text:'category'
                    size: self.parent.size
                    pos:self.parent.pos
                Button:
                    id: item_category
                    text: '--select--'
                    on_release: dropdown.open(self)
                    height: '48dp'
                    size: self.parent.size
                    pos:self.parent.pos
                    on_parent: dropdown.dismiss()

                    DropDown:

                        id: dropdown
                        
                        on_select: item_category.text = '{}'.format(args[1])

                        Button:
                            text: 'cellphone'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('cellphone')

                        Button:
                            text: 'computer'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('computer')

                        Button:
                            text: 'other gadgets'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('other-gadgets')

                        Button:
                            text: 'locks'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('locks')

                        Button:
                            text: 'bank cards'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('bank cards')



                        Button:
                            text: 'id cards'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('ID cards')

                        Button:
                            text: 'stationary'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('stationary')

                        Button:
                            text: 'clothing'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('clothing')

                        Button:
                            text: 'other'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('other')
                Label:
                    text:'name of item'
                TextInput:
                    id:item_name
                    multiline:False

                        
            GridLayout:
                rows:4
                cols:2                
                
                
                Label:
                    text:'upload item_image'
                #FileChooserListView:
                    #id: filechooser
                    #on_selection:pass#do sth
                TextInput:
                    id: item_pic
                    multiline:False
                Label:
                    text:'location found'
                Button:
                    id: item_category
                    text: '--select--'
                    on_release: dropdown.open(self)
                    height: '48dp'
                    size: self.parent.size
                    pos:self.parent.pos
                    on_parent: dropdown.dismiss()

                    DropDown:

                        id: dropdown
                        
                        on_select: item_category.text = '{}'.format(args[1])

                        Button:
                            text: 'cellphone'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('cellphone')

                        Button:
                            text: 'computer'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('computer')

                        Button:
                            text: 'other gadgets'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('other-gadgets')

                        Button:
                            text: 'locks'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('locks')

                        Button:
                            text: 'bank cards'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('bank cards')



                        Button:
                            text: 'id cards'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('ID cards')

                        Button:
                            text: 'stationary'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('stationary')

                        Button:
                            text: 'clothing'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('clothing')

                        Button:
                            text: 'other'
                            size_hint_y: None
                            height: '48dp'
                            on_release: dropdown.select('other')

                Label:
                    text:'date found'
                TextInput:
                    id:date_found
                    multiline:False
                Button:
                    text:'cancel report'
                    on_release:app.root.current='homepage'
                    
                Button:
                    text:'submit'
                    on_release:
                        root.submitFound()
                        app.root.current='homepage'
                    