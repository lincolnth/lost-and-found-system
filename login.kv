<LogIn>:
    name: 'login'
    GridLayout:
        rows:3
        cols:1
        padding:10
        spacing:30
        BoxLayout:
            orientation: 'horizontal'
            size: self.size
            Label:
                pos_hint:{'center_x':.5 , 'center_y':.5}
                canvas.before:
                    BorderImage:
                        #border:.5,.5,.,.1
                        source:'C:\Users\Personal\Documents\lostandfound\earth.gif'
                        pos: self.pos
                        size: self.size
                        
                          
        BoxLayout:
            orientation: 'vertical'
            
            size: self.size            
            
            Label:
                text:"user name"
                size_hint:0.5,0.9
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                

            TextInput:
                id: username
                hint_text:"reg number "
                size_hint:0.5,0.9
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
            Label:
                text:"password"
                size_hint:0.5,0.9
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                
            TextInput:
                id: password
                password:True
                text:""
                size_hint:0.5,0.9
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                text:"log in"
                size_hint:.5,0.9
                on_release:
                    root.login_insert()
                    app.root.current='homepage'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_color: 0,0,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15,]
               
        
        BoxLayout:
            orientation: 'horizontal'
            size: self.size
            
            Label:
                text:"create account"
                size_hint:.3,0.4
            Button:
                text:"sign in"
                size_hint:.3,0.4
                on_release:app.root.current='sign_in'
                background_color: 0.3,0.8,0,0  # the last zero is the critical on, make invisible
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,.5) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [30,]